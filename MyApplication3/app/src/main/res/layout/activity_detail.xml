<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:fillViewport="true"
    android:descendantFocusability="blocksDescendants"
    tools:context="com.example.ten.myapplication.DetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:focusableInTouchMode="true"
            android:id="@+id/img"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <TextView
            android:id="@+id/cafeName"
            android:text="\n카페이름"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cafeFood"
            android:layout_marginTop="20dp"
            android:text="메뉴정보\n아메리카노 2000\n라떼 2500\nddd 3000\nssss 3000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="200dp"
            />

        <RatingBar
            android:id="@+id/rating"
            style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="false"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editReview"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />

            <Button
                android:text="등록"
                android:onClick="registerReview"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <ImageView
            android:layout_marginTop="20dp"
            android:onClick="showReview"
            android:src="@drawable/speechbubble"
            android:layout_width="25dp"
            android:layout_height="25dp" />



        <ListView
            android:layout_marginTop="10dp"
            android:id="@+id/reviewList"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            />

    </LinearLayout>
</ScrollView>