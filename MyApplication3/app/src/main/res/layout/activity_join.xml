<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JoinActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="85dp"
        android:text="SIGN IN"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#334036" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="241dp"
        android:layout_height="36dp"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="35dp"
        android:paddingLeft="5dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext"
        >


        <EditText
            android:id="@+id/inputID"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_weight="5"
            android:layout_marginLeft="18dp"
            android:background="@android:color/transparent"
            android:hint="@string/edittext_hint_id"
            android:textColorHint="#95AD9A" />

        <Button
            android:id="@+id/checkButton"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="checkID"
            android:text="중복확인"
            android:textColor="#334036"
            android:textSize="10sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/inputPW"
        android:layout_width="241dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="38dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:background="@drawable/edittext"
        android:hint="@string/edittext_hint_pw"
        android:inputType="textPassword"
        android:textColorHint="#95AD9A" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_marginHorizontal="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:rowCount="3">

        <Button
            android:id="@+id/flower"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@drawable/btnselector"
            android:onClick="checkPreference"
            android:text="플라워 카페"
            android:textColor="#282828"
            android:textSize="10sp" />

        <Button
            android:id="@+id/cat"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@drawable/btnselector"
            android:onClick="checkPreference"
            android:text="동물 카페"
            android:textColor="#282828"
            android:textSize="10sp" />

        <Button
            android:id="@+id/dog"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@drawable/btnselector"
            android:onClick="checkPreference"
            android:text="만화 카페"
            android:textColor="#282828"
            android:textSize="10sp" />

        <Button
            android:id="@+id/roofTop"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@drawable/btnselector"
            android:onClick="checkPreference"
            android:text="루프탑 카페"
            android:textColor="#282828"
            android:textSize="10sp" />

        <Button
            android:id="@+id/character"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@drawable/btnselector"
            android:onClick="checkPreference"
            android:text="캐릭터 카페"
            android:textColor="#282828"
            android:textSize="10sp" />

        <Button
            android:id="@+id/cheap"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@drawable/btnselector"
            android:onClick="checkPreference"
            android:text="저렴한 카페"
            android:textColor="#282828"
            android:textSize="10sp" />

        <Button
            android:id="@+id/fortune"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@drawable/btnselector"
            android:onClick="checkPreference"
            android:text="사주 카페"
            android:textColor="#282828"
            android:textSize="10sp" />

        <Button
            android:id="@+id/book"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@drawable/btnselector"
            android:onClick="checkPreference"
            android:text="북 카페"
            android:textColor="#282828"
            android:textSize="10sp" />

        <Button
            android:id="@+id/dessert"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@drawable/btnselector"
            android:onClick="checkPreference"
            android:text="디저트 카페"
            android:textColor="#282828"
            android:textSize="10sp" />

    </GridLayout>

    <Button
        android:id="@+id/joinButton"
        android:text="회원가입"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="74dp"
        android:layout_marginHorizontal="18dp"
        android:background="#334036"
        android:onClick="join"
        android:textColor="#ffffff"
        />


</LinearLayout>