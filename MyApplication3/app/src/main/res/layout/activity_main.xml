<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/titlepic"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="390dp"
        android:layout_marginHorizontal="90dp"
        android:background="@drawable/shape"
        android:onClick="ClickBtn"
        android:text="로그인"
        android:textColor="#001E00"
        app:layout_constraintBottom_toTopOf="@+id/ApiBtn"
        app:layout_constraintEnd_toEndOf="@+id/ApiBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ApiBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ApiBtn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="90dp"
        android:background="@drawable/shape"
        android:onClick="ClickBtn"
        android:text="API"
        android:textColor="#001E00"
        app:layout_constraintBottom_toTopOf="@+id/MapBtn"
        app:layout_constraintEnd_toEndOf="@+id/MapBtn"
        app:layout_constraintStart_toStartOf="@+id/MapBtn"
        app:layout_constraintTop_toBottomOf="@+id/joinBtn" />

    <Button
        android:id="@+id/MapBtn"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginBottom="120dp"
        android:layout_marginHorizontal="90dp"
        android:background="@drawable/shape"
        android:onClick="ClickBtn"
        android:text="지도"
        android:textColor="#001E00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ApiBtn" />
</android.support.constraint.ConstraintLayout>